#   Makefile.fpc for Lazarus for Free Pascal
#

[package]
name=lazarus-components
version=0.7a

[target]
#dirs=synedit mwedit
dirs=synedit 

[install]

[prerules]
DIST_DESTDIR=$(BASEDIR)/../dist
ifndef LCLPLATFORM
LCLPLATFORM=gtk
export LCLPLATFORM
endif

[rules]
.PHONY: all makefile makefiles

makefile: Makefile.fpc
        -$(FPCMAKE) -w
        
makefiles: makefile
        $(MAKE) -C mwedit makefiles
        $(MAKE) -C synedit makefiles

